<Window x:Class="Setting.View.VersionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Setting.View"
        mc:Ignorable="d"
        Title="バージョン情報" SizeToContent="WidthAndHeight" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid Margin="5">
        <StackPanel>
            <TextBlock Text="SAPI For VOICEVOX"/>
            <TextBlock Text="Version 0.0.0" x:Name="versionString"/>
            <TextBlock Text="Copyright (c) 2021 shigobu"/>
            <TextBlock Text="MIT License"/>
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/shigobu/SAPIForVOICEVOX" RequestNavigate="Hyperlink_RequestNavigate">
                    Project Page(GitHub)
                </Hyperlink>
            </TextBlock>
            <Button Margin="0,5,0,0" Width="60" Content="閉じる" HorizontalAlignment="Right" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
